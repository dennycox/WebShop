@model WebShop.ViewModels.Product.ProductDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naam
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            Beschrijving
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            Prijs
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            Foto
        </dt>
        <dd class="col-sm-10">
            @if (Model.Product.ImagePath != null)
            {
                <img class="rounded img-fluid" style="width: 200px" src="~/storage/@Model.Product.ImagePath" alt="@Model.Product.ImagePath.ToString()">
            }
        </dd>
        <dt class="col-sm-2">
            Categorie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => Model.Product.Category.CategoryName)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Wijzig", "Edit", new {  id = Model.Product.ProductID  }) |
    <a asp-action="Index">Terug naar lijst</a>
</div>
